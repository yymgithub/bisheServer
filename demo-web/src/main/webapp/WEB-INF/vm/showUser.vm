#set($layout = "layout/empty.vm")
<form class="form-horizontal" id="showUserId" action="/user/showUser" method="post">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                系统所有用户信息
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row well">
            <div>
                <form class="form-horizontal" id="orderList">
                    <table class="table table-striped table-bordered table-condensed table-hover grid fixed">
                        <tr>
                            <td>
                                用户角色 <select name="orderType" id="orderType">
                                <option value="1">普通户用</option>
                                <option value="2">操作员</option>
                                <option value="3">管理员</option>
                            </select>
                            </td>
                            <td>
                                用户状态 <select name="orderType" id="orderType">
                                <option value="1">登陆</option>
                                <option value="0">未登录</option>
                            </select>
                            </td>
                            <td><input type="text" id="pin"/>
                                <button id="updateData" type="button" class="btn btn-default" onclick="getOrderList()">
                                    查询
                                </button>
                            </td>

                        </tr>
                    </table>
                </form>
            </div>
            <div class="col-lg-14">
                <form class="form-horizontal" id="showUser">
                    <table class="table table-striped table-bordered table-condensed table-hover grid fixed">
                        <thead>
                        <tr>
                            <th>账号</th>
                            <th>姓名</th>
                            <th>角色</th>
                            <th>密码</th>
                            <th>状态</th>
                            <th>创建时间</th>
                            <th>修改时间</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        #foreach($user in ${page.datas})
                            <tr>
                                <td>
                                    $!{user.phoneId}
                                </td>
                                <td>
                                    $!{user.userName}
                                </td>
                                <td>
                                    $!{user.userRole}
                                </td>
                                <td>
                                    $!{user.password}
                                </td>
                                <td>
                                    $!{user.userState}
                                </td>
                                <td>
                                    $!{user.created}
                                </td>
                                <td>
                                    $!{user.modified}
                                </td>
                                <td>
                                    <button class="btn btn-info btn-primary">修改</button>
                                    <button class="btn btn-info btn-danger" style="margin-left:3px">停用</button>
                                </td>
                            </tr>
                        #end
                    </table>
                    #pager(${page} "/user/showUser" "showUser")
                </form>
            </div>
            <div class="col-lg-1">
            </div>
        </div>
    </div>
</form>